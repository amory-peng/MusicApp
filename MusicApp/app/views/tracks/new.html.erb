<h1>ADD A TRACK</h1>

<form class="" action=" <%= tracks_url %>" method="post">
  <input type="hidden" name="authenticity_token" value=" <%= form_authenticity_token %>">
  <label for="title">Title</label>
  <input type="text" name="track[title]" value="">

  <label for="album">Album</label>
  <select class="" name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value=" <%= album.id %>"
        <%= album == @album ? "selected" : "" %>
        > <%= album.band.name %>: <%= album.name %></option>
    <% end %>
  </select>
  <br>
  <label for="lyrics">lyrics</label>

  <textarea name="track[lyrics]" rows="8" cols="80"></textarea>
  <br>
  <input type="submit" name="" value="add track">
</form>
