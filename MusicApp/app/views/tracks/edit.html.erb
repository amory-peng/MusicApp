<h1>EDIT TRACK</h1>

<form class="" action=" <%= track_url(@track) %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value=" <%= form_authenticity_token %>">
  <label for="title">Title</label>
  <input type="text" name="track[title]" value=" <%= @track.title %>">

  <label for="album">Album</label>
  <select class="" name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value=" <%= album.id %>"
        <%= album == @album ? "selected" : "" %>
        > <%= album.band.name %>: <%= album.name %></option>
    <% end %>
  </select>
  <br>
  <label for="lyrics">lyrics</label>

  <textarea name="track[lyrics]" rows="8" cols="80"><%= @track.lyrics %>
  </textarea>

  <br>
  <input type="submit" name="" value="edit track">
</form>
